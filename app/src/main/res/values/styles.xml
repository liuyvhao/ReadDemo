<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="styleLoadingLayout">@style/LoadingLayoutStyle</item>
    </style>

    <style name="FullTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LoadingLayoutStyle" parent="LoadingLayout.Style">
        <!--<item name="llEmptyImage">@drawable/ic_empty</item>-->
        <!--<item name="llErrorImage">@drawable/ic_error</item>-->
        <item name="llLoadingResId">@layout/common_loading</item>
    </style>

    <style name="popTitleAnim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/pop_down</item>
        <item name="android:windowExitAnimation">@anim/pop_up</item>
    </style>

    <style name="popMenuAnim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/pop_up</item>
        <item name="android:windowExitAnimation">@anim/pop_down</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
